{
  "manifest_version": 2,
  "name": "Tab Sorter",
  "version": "1.0.0",
  "description": "Rearrange your tabs by URL",
  "permissions": [
    "tabs"
  ],
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "128": "assets/rust.png"
    }
  },
  "content_scripts":[
    {
      "matches":[
        "http://example.com/"
      ],
      "js":[
        "content/content.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background/background.js"
    ]
  }
}